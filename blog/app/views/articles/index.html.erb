<%= render :partial => "shared/navbar" %>
<div class="container hasPadding">
	<div class="page-header">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h1>All Articles</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1">
			<table class="table table-striped table-hover">
				<tr>
					<th>#</th>
					<th>Title</th>
					<th>Text</th>
					<th colspan="2">Option</th>
				</tr>
				<% @articles.each do |a| %>
				<tr>
					<td><%= a.id %></td>
					<td><%= link_to a.title, article_path(a) %></td>
					<td><%= a.text %></td>
					<td><%= link_to 'Edit', edit_article_path(a), :type => "button", :class => "btn btn-info"%></td>
					<td><%= button_tag "Delete", data: {:toggle => "modal", :target => "#deleteModal#{a.id}"}, :class => "btn btn-danger" %></td>
				</tr>
				<%= "<div class='modal fade' id='deleteModal#{a.id}' tabindex='-1' role='dialog' aria-labelledby='deleteModalLabel#{a.id}' aria-hidden='true'>".html_safe %>
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h2 class="modal-title text-info text-center">Are you sure?</h4>
							</div>
							<div class="modal-body">
								<h2 class="text-danger text-center">This cannot be undone!</h2>
							</div>
							<div class="modal-footer">
								<%= link_to 'Yes', article_path(a), :type => "button", :class => "btn btn-primary", method: :delete %>
								<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</table>
		</div>
	</div>
</div>