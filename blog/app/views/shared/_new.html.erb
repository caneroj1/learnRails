<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<% if @article.errors.any? then %>
		<div class="alert alert-dismissable alert-danger">
			<button type="button" class="close" data-dismiss="alert">x</button>
			<h2 class="text-center"><%= pluralize(@article.errors.count, "error") %></h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="well">
			<fieldset>
			<%= form_for :article, :url => articles_path, :html => {:class => "form-horizontal"} do |form| %>
					<div class="form-group">
						<%= form.label :title, :class => "col-lg-2 control-label" %>
						<div class="col-lg-10">
							<%= form.text_field :title, :class => "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<%= form.label :text, :class => "col-lg-2 control-label" %>
						<div class="col-lg-10">
							<%= form.text_area :text, :class => "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-3 col-lg-offset-9">
							<%= form.submit :class => "btn btn-primary" %>
						</div>
					</div>
			<% end %>
			</fieldset>
		</div>
	</div>
</div>